{
  "name": "@openfn/logger",
  "version": "0.0.3",
  "description": "Cross-package logging utility",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build:rollup": "rimraf dist/ .rollup.cache ts.cache && rollup -c",
    "build:watch": "pnpm build --watch",
    "build": "tsup --config ../../tsup.config.js src/index.ts",
    "test": "pnpm ava",
    "test:types": "pnpm tsc --noEmit --project tsconfig.json",
    "test:watch": "pnpm ava -w",
    "pack": "pnpm pack --pack-destination ../../dist"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "4",
    "figures": "^5.0.0",
    "tsup": "^6.2.3"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/node": "^18.7.18",
    "ava": "^4.3.3",
    "rollup": "^2.79.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "tsm": "^2.2.2",
    "typescript": "^4.8.3"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
